<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">
    <class>com.noname.books_exchange.model.Status</class>
    <class>com.noname.books_exchange.model.UserMsg</class>
    <class>com.noname.books_exchange.model.Author</class>
    <class>com.noname.books_exchange.model.BookLiterary</class>
    <class>com.noname.books_exchange.model.BookResponse</class>
    <class>com.noname.books_exchange.model.Category</class>
    <class>com.noname.books_exchange.model.ExchangeList</class>
    <class>com.noname.books_exchange.model.OfferList</class>
    <class>com.noname.books_exchange.model.User</class>
    <class>com.noname.books_exchange.model.UserAddress</class>
    <class>com.noname.books_exchange.model.UserExchangeList</class>
    <class>com.noname.books_exchange.model.UserList</class>
    <class>com.noname.books_exchange.model.UserValueCategory</class>
    <class>com.noname.books_exchange.model.WishList</class>
    <properties>
      <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/book_exchange"/>
      <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
      <property name="hibernate.connection.username" value="postgres"/>
      <property name="hibernate.connection.password" value="1337"/>
    </properties>
  </persistence-unit>
</persistence>
